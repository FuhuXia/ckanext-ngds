            <div class="sp-label {{classes}}"><label>{{label}}</label></div>
            <{{tag}} {{additional}} name="{{name}}" {{id}} class="structured-input" {{placeholder}}>{{inner}}</{{tag}}>
            <br/>
            {{{additional_content}}}
        </div>
{{/form}}

{{#custom}}
	<{{tag}} type="{{type}}" name="{{name}}" id="{{id}}"></{{tag}}>
{{/custom}}